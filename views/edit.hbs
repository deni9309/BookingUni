<section id="viewAddhotel">
    <h2>Edit existing hotel</h2>
    <form id="formAddhotel" method="post" action="/hotel/{{_id}}/edit">
        <label for="name">Hotel name:</label>
        <input type="text" id="name" name="name" value="{{name}}">

        <label for="city">City:</label>
        <input type="text" id="city" name="city" value="{{city}}">

        <label for="rooms">Free rooms:</label>
        <input type="number" id="rooms" name="rooms" value="{{rooms}}">

        <label for="imgUrl">Image:</label>
        <input type="text" id="imgUrl" name="imgUrl" value="{{imgUrl}}">

        <input type="submit" class="create" value="Add">
    </form>
</section>