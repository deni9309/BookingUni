<section id="viewAddhotel">
    <h2>Add new hotel</h2>
    <form id="formAddhotel" method="post" action="/hotel/create">
        <label for="name">Hotel name:</label>
        <input type="text" id="name" name="name" placeholder="Hotel name" value="{{name}}">

        <label for="city">City:</label>
        <input type="text" id="city" name="city" placeholder="City" value="{{city}}">

        <label for="rooms">Rooms:</label>
        <input type="number" id="rooms" name="rooms" placeholder="Count of rooms" value="{{rooms}}">

        <label for="imgUrl">Image:</label>
        <input type="text" id="imgUrl" name="imgUrl" placeholder="https://" value="{{imgUrl}}">

        <input type="submit" class="create" value="Add">
    </form>
</section>