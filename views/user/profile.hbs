<section id="viewhotelDetails">
    <div class="profile"><img src="/static/img/profile.png" alt="{{username}}">
        <h3>User Info:</h3>
        <div class="flex">
            <p>Username: </p>
            <p>{{username}}</p>
        </div>
        <div class="flex">
            <p>Email: </p>
            <p>{{email}}</p>
        </div>
        <div class="flex">
            {{#if userBookings}}
                <p>Reservations: </p>
                <p>
                    {{#each userBookings}}
                        <span>{{this}}<br></span>
                    {{/each}}
                </p>
            {{else}}
                <div class="profile-flex">
                   
                        You currently don't have any reservations.
             
                </div>
            {{/if}}
        </div>
    </div>
</section>